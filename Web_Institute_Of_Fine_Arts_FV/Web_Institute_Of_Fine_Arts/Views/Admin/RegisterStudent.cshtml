@model Web_Institute_Of_Fine_Arts_Database_Models.REGISTRATION_MODEL

@{
    ViewBag.Title = "RegisterStudent";
    Layout = "~/Views/Shared/Admin_Master_Layout/Admin_Layout.cshtml";
}

<h2>RegisterStudent</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>REGISTRATION</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.REG_STDL_ID, "REG_STDL_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.REG_STDL_ID,ViewBag.studentList as SelectList, "Select Student", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.REG_STDL_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.REG_CR_ID, "REG_CR_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.REG_CR_ID, ViewBag.courseList as SelectList, "Select Course", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.REG_CR_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
