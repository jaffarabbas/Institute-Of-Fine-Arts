@model Web_Institute_Of_Fine_Arts_Database_Models.STAFF_LOGIN_MODEL




@using (Html.BeginForm("FacultyLogin", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="form-login">

        <tr><div id="cros4" onclick="mypop4()"><i class="fa fa-close"></i></div></tr>
        <tr><h4 class="text-center" id="man4"><b>Staff Login</b></h4></tr>
        <tr>
            @Html.TextBoxFor(model => model.STF_NAME, new { @class = "form-control", id = "login-name4" })
            @Html.ValidationMessageFor(model => model.STF_NAME, "", new { @class = "text-danger" })
        </tr>

        <tr>
            @Html.EditorFor(model => model.STF_PASSWORD, new { htmlAttributes = new { @class = "form-control", id = "login-pass4" } })
            @Html.ValidationMessageFor(model => model.STF_PASSWORD, "", new { @class = "text-danger" })
        </tr>
        <tr><input type="submit" value="Submit" id="login-btn4" class="form-control" /></tr>
    </table>
}
