@model Web_Institute_Of_Fine_Arts_Database_Models.ADMIN_LOGIN_MODEL

@using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <table class="form-login">

        <tr><div id="cros2" onclick="mypop2()"><i class="fa fa-close"></i></div></tr>
        <tr><h4 class="text-center" id="man2"><b>Admin Login</b></h4></tr>
        <tr>
            @Html.TextBoxFor(model => model.AD_NAME, new { @class = "form-control", id = "login-name2" })
            @Html.ValidationMessageFor(model => model.AD_NAME, "", new { @class = "text-danger" })
        </tr>

        <tr>
            @Html.EditorFor(model => model.AD_PASSWORD, new { htmlAttributes = new { @class = "form-control", id = "login-pass2" } })
            @Html.ValidationMessageFor(model => model.AD_PASSWORD, "", new { @class = "text-danger" })
        </tr>
        <tr><input type="submit" id="login-btn2" class="form-control" /></tr>
    </table>
}
